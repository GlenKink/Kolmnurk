#include <stdio.h>
  int main () {
        int x1, y1, x2, y2, x3, y3, div, i;

        
        
      printf("Sisesta lugeja A: "); // KÃ¼sin kasutajalt esimese murdarvu
        scanf("%d", &x1);
        
      printf("Sisesta nimetaja A: ");
        scanf("%d", &y1);
        
      printf("Sisesta lugeja B: ");
        scanf("%d", &x2);
        
      printf("Sisesta nimetaja A: ");
        scanf("%d", &y2);

        x3 = (x1 * y2) + (x2 * y1); // Arvutan lugeja

        
        y3 = (y1 * y2); // Arvutan nimetaja

       
        if (x3 > y3) {           // Murru lihtsustamine
                div = y3;
        } else {
                div = x3;
        }

        for (i = div; i > 0; i--) {
                if (x3 % i == 0 && y3 % i == 0) {
                        x3 = x3 / i;
                        y3 = y3 / i;
                }
        }

        
        printf("Murru summa on %d/%d\n", x3, y3);   // VÃ¤ljasta vastus
        return 0;
  }
